<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Project</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <%- include('partials/navbar', { page: "" }) %>
  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-xl">
      <div class="hero-content">
        <div>
          <h1 class="text-4xl font-bold"><%= project.title %></h1>
          <p class="py-4">Below, you will find detailed information about this project.</p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
      <img class="rounded-xl shadow" src="<%= project.feature_img_url %>" alt="<%= project.title %>" />
      <div class="prose">
        <p><strong>Sector:</strong> <%= project.sector %></p>
        <p><strong>Intro:</strong> <%= project.intro_short %></p>
        <p><strong>Impact:</strong> <%= project.impact %></p>
        <p><a class="btn btn-outline" href="<%= project.original_source_url %>" target="_blank" rel="noopener">Learn more</a></p>
        <hr />
        <blockquote id="quoteBox" class="italic opacity-80">Loading quote…</blockquote>
        <p class="mt-2">
        <button type="button" class="btn" onclick="history.back(); return false;">Go Back</button>
        </p>

      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", async ()=>{
      try {
        const res = await fetch("https://dummyjson.com/quotes/random");
        const data = await res.json();
        document.getElementById("quoteBox").textContent =
          data?.quote ? `“${data.quote}” — ${data?.author ?? "Unknown"}` : "Stay curious and keep learning.";
      } catch {
        document.getElementById("quoteBox").textContent = "Stay curious and keep learning.";
      }
    });
  </script>
</body>
</html>
