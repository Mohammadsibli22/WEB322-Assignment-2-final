<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Projects</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <%- include('partials/navbar', { page: "/solutions/projects" }) %>
  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-xl">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h1 class="text-4xl font-bold">Projects</h1>
          <p class="py-6">Quick filters:</p>
          <div class="flex flex-wrap gap-2 justify-center">
            <a class="btn btn-outline" href="/solutions/projects?sector=Industry">Industry</a>
            <a class="btn btn-outline" href="/solutions/projects?sector=Transportation">Transportation</a>
            <a class="btn btn-outline" href="/solutions/projects?sector=Food">Food / Agriculture</a>
            <a class="btn btn-outline" href="/solutions/projects">All</a>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto mt-8">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% if (projects && projects.length) { %>
            <% projects.forEach(p => { %>
              <tr>
                <td><%= p.title %></td>
                <td>
                  <a class="btn btn-sm" href="/solutions/projects?sector=<%= encodeURIComponent(p.sector) %>"><%= p.sector %></a>
                </td>
                <td class="max-w-xl"><span class="line-clamp-3"><%= p.summary_short %></span></td>
                <td><a class="btn btn-primary btn-sm" href="/solutions/projects/<%= p.id %>">Details</a></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="4">No projects found.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
